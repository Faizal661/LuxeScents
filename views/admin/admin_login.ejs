                <!-- <%= logout %> -->
            <!-- </h5> -->
            <!-- <% } %> -->
            <h5 class="text-primary text-center fw-bold" id="logout">
                <span></span>
            </h5>
                <div class="container w-25 border rounded py-5 shadow-lg" style="border: 2px solid rgb(0, 0, 0) !important;background-color:rgb(156, 156, 156) ; " >
                    <div class="title pb-5">
                        <h2 class="font-weight-bold">Admin Login </h2>
                    </div>
                    <form action="/admin/admin_login" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control mb-3" placeholder="username" name="username" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="password" required>
                        </div>
                        <div class="text-danger text-center my-3 " id="msg">
                            <span></span>
                        </div>
                        <button type="submit" class="btn btn-dark rounded-pill">SUBMIT</button>
                    </form>
                    
                </div>
    </div>
    <script>

        const url = window.location.search.substring(1)
        console.log(url)
        if (url === 'invalid') {
            const spanMsg= document.getElementById('msg').querySelector('span');
            spanMsg.innerText = "Invalid Username and Password";
        }else if(url === 'logout') {
            const spanMsg= document.getElementById('logout').querySelector('span');
            spanMsg.innerText = "Logout successfully";
        }

    </script>

