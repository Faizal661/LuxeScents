<%- include("../../views/partials/admin/header") %>

    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css" />
        <link rel="stylesheet" href="/admin-assets/css/productsCategory.css">
    </head>

    <body>
        <div class="container">
            <h1 class="d-flex justify-content-center align-content-center py-5">Add New Coupon</h1>
            <form action="/admin/addCoupon" method="POST" class="d-block justify-content-center align-content-center p-5 mx-5">
                <div class="form-group">
                    <label for="code">Coupon Code:</label>
                    <input type="text" name="code" id="code" class="form-control shadow" required>
                </div>
        
                <div class="form-group">
                    <label for="expireOn">Expire On:</label>
                    <input type="date" name="expireOn" id="expireOn" class="form-control shadow" required>
                </div>
        
                <div class="form-group">
                    <label for="usageLimit">Usage Limit:</label>
                    <input type="number" name="usageLimit" id="usageLimit" class="form-control shadow" min="1" required>
                </div>
        
                <div class="form-group">
                    <label for="offerPrice">Offer Price:</label>
                    <input type="number" name="offerPrice" id="offerPrice" class="form-control shadow" required>
                </div>
        
                <div class="form-group">
                    <label for="minimumPrice">Minimum Price:</label>
                    <input type="number" name="minimumPrice" id="minimumPrice" class="form-control shadow" required>
                </div>
        
                <button type="submit" class="btn btn-primary">Add Coupon</button>
            </form>
        </div>
        

    <%- include("../../views/partials/admin/footer") %>