    </nav>
    <!---------------User display ------ -->

    <div class="container">
        <div class="row my-3">
            <div class="col-lg-12">
                <% if (typeof message !== 'undefined') { %>
                    <div class="alert alert-<%= message.type %> alert-dismissible fade show mt-3" role="alert">
                        <strong><%= message.message %></strong>
                        <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true"></span>
                        </button>
                    </div>
                <% } %>
                <div class="table-responsive">
                    <% if (locals.users !='' ) { %>
                        <table class="table table-hover table-striped text-center my-3">
                            <thead>
                                <tr class="table-danger ">
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>E-mail</th>
                                    <th>Phone</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% locals.users.forEach((row,index)=> { %>
                                    <tr class="align-middle">
                                        <td>
                                            <%= index+1 %>
                                        </td>
                                        <td><img src="<%=row.image %>" width="50" class="img-thumbnail"></td>
                                        <!-- <td><img src="../../uploads/image_1721901294589_13.jpg" width="50" class="img-thumbnail"></td> -->
                                        <td>
                                            <%= row.name %>
                                        </td>
                                        <td>
                                            <%= row.email %>
                                        </td>
                                        <td>
                                            <%= row.phone %>
                                        </td>
                                        <td>
                                            <a href="/admin/edit/<%= row._id %>" class="text-success"><i
                                                    class="fas fa-edit fa-lg mx-1"></i></a>

                                            <a href="/admin/delete/<%= row._id %>" class="text-danger ms-3"><i
                                                    class="fas fa-trash fa-lg mx-1"></i></a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <% }else{ %>
                            <h1 class="text-center text-secondary mt-5">No users found in the DB !</h1>
                            <% } %>

                </div>
            </div>
        </div>
    </div>


    <!--  -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
