<%- include('../partials/admin/header') %>


    <style>
        .container {
            margin-top: 30px;
        }

        .order-items,
        .order-summary {
            margin-bottom: 20px;
        }

        .list-group-item {
            border: none;
        }


        .order-item-images img {
            max-width: 100%;
            height: auto;
            margin-right: 10px;
        }

        .address p {
            padding-bottom: 10px;

        }

        .order-summary .card {
            background-color: #f8f9fa;
        }

        .order-summary div p {
            padding-bottom: 10px;
        }

        .btn-cancel {
            float: right;
        }

        .card p {
            margin: 0;
        }
    </style>

    </head>

    <body>


        <div class="container">
            <h2 class="mb-4">
                </h1>

                <div class="row">
                    <!-- Order Items Section -->
                    <div class="col-md-6 order-items ">
                        <h3 class="text-center mb-3">Ordered Items
                        </h3>
                        <ul class="list-group shadow card">
                            <% order.orderedItems.forEach((item,index)=> { %>
                                <li class="list-group-item d-flex cursor-pointer ms-3">
                                    <div class="">
                                        <%= index+1 %>. 
                                    </div>
                                    <div class="col-6 ps-2">
                                        <strong>Product:</strong>
                                        <%= item.product.productName %><br>
                                            <strong>Quantity:</strong>
                                            <%= item.quantity %><br>
                                                <strong>Size:</strong>
                                                <%= item.size %><br>
                                                    <strong>Price:</strong> ₹<%= item.price %><br>
                                    </div>
                                    <div class="col-6">
                                        
                                    </div>

                                </li>
                                <hr>
                                <% }); %>
                        </ul>
                    </div>

                    <!-- Shipping Address Section -->
                    <div class="col-md-6 ">
                        <h3 class="text-center mb-3">Shipping Address</h3>
                        <div class="card p-3 address shadow">
                            <p><strong>Address Type:</strong>
                                <%= order.address.addressType %>
                            </p>
                            <p><strong>Name:</strong>
                                <%= order.address.name %>
                            </p>
                            <p><strong>Locality:</strong>
                                <%= order.address.locality %>
                            </p>
                            <p><strong>City:</strong>
                                <%= order.address.city %>
                            </p>
                            <p><strong>Landmark:</strong>
                                <%= order.address.landMark %>
                            </p>
                            <p><strong>State:</strong>
                                <%= order.address.state %>
                            </p>
                            <p><strong>Pin Code:</strong>
                                <%= order.address.pincode %>
                            </p>
                            <p><strong>Phone:</strong>
                                <%= order.address.phone %>
                            </p>
                            <p><strong>Alternate Phone:</strong>
                                <%= order.address.altPhone %>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row my-4 ">
                     <!-- Order Summary Section -->
                     <div class="col-md-6 order-summary">
                        <h3 class="text-center mb-3">Order Summary</h3>
                        <div class="card p-3 shadow">
                            <p><strong>Subtotal:</strong> ₹<%= order.subtotal %>
                            </p>
                            <p><strong>Tax:</strong> ₹<%= order.tax %>
                            </p>
                            <p><strong>Total Price:</strong> ₹<%= order.finalAmount %>
                            </p>
                            <p><strong>Payment Method:</strong>
                                <%= order.paymentMethod %>
                            </p>
                            <p><strong>Status:</strong>
                                <%= order.orderStatus %>
                            </p>
                            <p><strong>Ordered Date:</strong>
                                <%= order.createdAt.toLocaleString() %>
                            </p>
                        </div>
                    </div>
                    
                    <div class="col-md-6 ">
                        <h3 class="text-center mb-3">Change Order Status</h3>
                        <select class="form-select shadow card form-control border border-2"
                            onchange="updateOrderStatus('<%= order._id %>', this.value)">
                            <option value="Processing" <%=order.orderStatus==='Processing' ? 'selected' : '' %>
                                >Processing</option>
                            <option value="Shipped" <%=order.orderStatus==='Shipped' ? 'selected' : '' %>
                                >Shipped</option>
                            <option value="Delivered" <%=order.orderStatus==='Delivered' ? 'selected' : '' %>>Delivered
                            </option>
                            <option value="Cancelled" <%=order.orderStatus==='Cancelled' ? 'selected' : '' %>>Cancelled
                            </option>
                            <option value="Return Request" <%=order.orderStatus==='Return Request' ? 'selected' : '' %>
                                >Return Request</option>
                            <option value="Returned" <%=order.orderStatus==='Returned' ? 'selected' : '' %>
                                >Returned</option>
                        </select>
                    </div>
                   

                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function updateOrderStatus(orderId, newStatus) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: 'You want to change the status of this order?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, change it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        axios.post('/admin/updateOrderStatus', { orderId, newStatus })
                            .then(response => {
                                if (response.data.success) {
                                    Swal.fire(
                                        'Success',
                                        'Order status updated successfully',
                                        'success'
                                    );
                                } else {
                                    Swal.fire(
                                        'Error',
                                        response.data.message,
                                        'error'
                                    );
                                }
                            })
                            .catch(error => {
                                Swal.fire(
                                    'Error',
                                    'Failed to update order status',
                                    'error'
                                );
                                console.error('Error updating order status:', error);
                            });
                    }
                });
            }

        </script>

    </body>

    <%- include('../partials/admin/footer') %>