<%- include('../partials/admin/logoOnlyHeader') -%>

    <body style="background-color: rgba(38, 255, 0, 0.1); ">
        <header>
            <div class="title pb-5 border border-bottom" style="height: 60px;">
                <a href="/" class="text-decoration-none">
                    <h2 class="font-weight-bold ms-5 logo">Luxe Scents</h2>
                </a>
            </div>
        </header>
        <div class="text-center pt-5" id="login" style="margin-top: 120px;">
            <!-- <% if(locals.logout){ %> -->
            <!-- <h5 class=" text-primary text-center fw-bold"> -->
            <!-- <%= logout %> -->
            <!-- </h5> -->
            <!-- <% } %> -->
            <h5 class="text-success text-center fw-bold" id="logout">
                <span></span>
            </h5>
            <div class="container w-25  rounded pt-5 ">
                <div class="title pb-5">
                    <h3 class="fw-semibold">Admin Sign in</h3>
                </div>

                <form action="/admin/admin-login" method="post">
                    <label for="" class="float-start fw-semibold pt-3">Email</label>
                    <div class="form-group">
                        <input type="email" class="form-control mb-3" value="admin@luxescent.com" name="email" required>
                    </div>
                    <div class="pt-3">
                        <label for="" class="float-start fw-semibold ">Password</label>
                        <!-- <a href="/admin/forgotPassword"><span
                                class="float-end text-decoration-underline text-black">Forgot password?</span></a> -->
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" value="1234567q" required>
                    </div>
                    <div class="text-warning text-center mt-2" id="msg">
                        <span></span>
                    </div>
                    <button type="submit" class="btn btn-dark rounded-pill w-100">Sign In</button>
                </form>


            </div>
        </div>
        <script>

            const url = window.location.search.substring(1)
            console.log(url)
            if (url === 'invalid') {
                const spanMsg = document.getElementById('msg').querySelector('span');
                spanMsg.innerText = "Invalid Username and Password";
            } else if (url === 'logout') {
                const spanMsg = document.getElementById('logout').querySelector('span');
                spanMsg.innerText = "Admin Logged Out Successfully";
            }

        </script>

        <%- include('../partials/admin/footer') -%>