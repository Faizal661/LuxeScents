<%- include("../../views/partials/admin/header") %>
    <div class="content-header row">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="content-title card-title">
                Products</h2>
        </div>
    </div>
    </div>

    <header class="card-header text-center bg-transparent mb-20 me-5 float-end">
        <form action="/admin/products/" method="get" class="d-inline">
            <div class="input-group input-group-sm border border-2 border-grey rounded-pill"
                style="width: 500px; margin-left: 230px;">
                <input type="text" class="form-control border-0 rounded-pill bg-transparent" placeholder=" Search Products..."
                    name="search">
                <button class="btn border border-2 border-end-0 border-top-0 border-bottom-0" type="submit">Search</button>
            </div>
        </form>
    </header>
    <div class="right mt-5 mx-5">
        <table class="table table-striped border border-2">
            <thead class=" border border-2">
                <tr>
                    <th scope="col" class=" border border-2 text-center h6"><b></b></th>
                    <th scope="col" class=" border border-2 text-center h6"><b>Product Name</b></th>
                    <th scope="col" class=" border border-2 text-center h6"><b>Price</b></th>
                    <th scope="col" class=" border border-2 text-center h6"><b>Stock </b></th>
                    <th scope="col" class=" border border-2 text-center h6"><b>Actions</b></th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0;i<data.length;i++) {%>
                    <tr>
                        <td class=" border border-2 text-center">
                            <%= (limit*(currentPage-1)+1+i) %>
                        </td>
                        <td class=" border border-2 text-center">
                            <%= data[i].productName %>
                        </td>
                        <td class=" border border-2 text-center">
                            <%= data[i].salePrice %>
                        </td class=" border border-2">
                        <td class=" border border-2 text-center">
                            <%= data[i].quantity %>
                        </td>
                        <td class=" border border-2 d-flex justify-content-evenly ">
                            <button class="btn btn-info" style="width: 80px;">
                                <a href="/admin/editProduct?id=<%= data[i]._id %>" class="text-white"
                                    style="text-decoration: none;">Edit</a>
                            </button>
                            <% if(data[i].isBlocked===false) {%>
                                <button class="btn btn-danger" style="width: 80px;">
                                    <a href="/admin/blockProduct?id=<%= data[i]._id %>" class="text-white"
                                        style="text-decoration: none;">Block</a>
                                </button>
                                <% }else{ %>
                                    <button class="btn btn-success" style="width: 80px;">
                                        <a href="/admin/unblockProduct?id=<%= data[i]._id %>" class="text-white"
                                            style="text-decoration: none;">Unblock</a>
                                    </button>
                                    <% } %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <div class="container mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
                <% for(let i=1;i<=totalPages;i++){ %>
                    <li class="page-item <%=(i===currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
            </ul>
        </nav>
    </div>
    <%- include("../../views/partials/admin/footer") %>