<%-include('../partials/users/header') -%>
    <body>
        <header>
            <div class="title pb-5 border border-bottom" style="height: 60px;">
                <h1 class="font-weight-bold text-center logo">Luxe Scents</h1>
            </div>
        </header>
        <div class="text-center pt-2">
            <div class="container w-50  rounded pt-5 ">
                <div class="title pb-5">
                    <h3>Forgot Password</h3>
                </div>
                <div class="border border-2 py-5 rounded-4 shadow-lg">
                    <div>
                        <h2>Enter Your Email To Reset Password</h2>
                    </div>
                    <div class="d-flex justify-content-center align-items-center ">
                        <div class="w-50 ">
                            <form action="/sendOtpToChangePassword" method="post">
                                <label for="" class="float-start fw-semibold pt-3">Email</label>
                                <div class="form-group">
                                    <input type="text" class="form-control mb-3" name="email" required>
                                </div>
                                <div class="text-danger text-center mt-2" id="msg">
                                    <span></span>
                                </div>
                                <button type="submit" class="btn btn-dark rounded-pill w-100">Send OTP</button>
                            </form>
                            <div class="mt-4">
                                <a href="/" class=" text-decoration-none"> Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script>

                const url = window.location.search.substring(1)
                console.log(url)
                if (url === 'invalid') {
                    const spanMsg = document.getElementById('msg').querySelector('span');
                    spanMsg.innerText = "Not a registered Email";
                }
            </script>


<%-include('../partials/users/footer') -%>