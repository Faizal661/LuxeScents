<%-include('../partials/users/header') -%>
    <body>
        <header>
            <div class="title pb-5 border border-bottom" style="height: 60px;">
                <h1 class="font-weight-bold text-center logo">Luxe Scents</h1>
            </div>
        </header>
        <div class="text-center pt-2">
            <div class="container w-50  rounded pt-5 ">
                <div class="title pb-5">
                    <h3></h3>
                </div>
                <div class="border border-2 py-5 rounded-4 shadow-lg">
                    <div>
                        <h2> Change Password</h2>
                    </div>
                    <div class="d-flex justify-content-center align-items-center ">
                        <div class="w-50 ">
                            <form action="/login" method="post">
                                <label for="" class="float-start fw-semibold pt-3">OTP</label>
                                <div class="form-group">
                                    <input type="string" class="form-control mb-3" name="otp" required>
                                </div>
                                 <label for="" class="float-start fw-semibold pt-3">New Password</label>
                                <div class="form-group">
                                    <input type="password" class="form-control mb-3" name="newPassword" required>
                                </div>
                                <label for="" class="float-start fw-semibold pt-3">Confirm Password</label>
                                <div class="form-group">
                                    <input type="text" class="form-control mb-3" name="confirmPassword" required>
                                </div>
                                <div class="text-danger text-center mt-2" id="msg">
                                    <span></span>
                                </div>
                                <button type="submit" class="btn btn-dark rounded-pill w-100">Change Password</button>
                            </form>
                            <div class="mt-4">
                                <a href="/" class=" text-decoration-none me-5"> Resent OTP</a>
                                <a href="/" class=" text-decoration-none"> Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script>

                const url = window.location.search.substring(1)
                console.log(url)
                if (url === 'notSame') {
                    const spanMsg = document.getElementById('msg').querySelector('span');
                    spanMsg.innerText = "Password and confirm password is not same";
                }
            </script>


<%-include('../partials/users/footer') -%>