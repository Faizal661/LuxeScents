    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        function addToWishlist(productId) {
            event.preventDefault()
            axios.post('/toggleWishlist', { productId })
                .then(response => {
                    if (response.data.success) {
                        Swal.fire({
                            toast: true,
                            timer: 800,
                            timerProgressBar: true,
                            title: response.data.data.inWishlist ? 'Added' : 'Removed',
                            text: response.data.message,
                            icon: response.data.data.inWishlist ? 'success' : 'error',
                            position: 'top-end',
                            showConfirmButton: false,
                            customClass: {
                                popup: 'custom-toast'
                            }
                        })
                    } else {
                        Swal.fire({
                            toast: true,
                            timer: 800,
                            timerProgressBar: true,
                            title: 'Failed!',
                            text: 'Failed to add product to wishlist',
                            icon: 'error',
                            position: 'top-end',
                            showConfirmButton: false,
                            customClass: {
                                popup: 'custom-toast'
                            }
                        })
                    }
                })
                .catch(error => {
                    console.error('There was an error adding the product to the wishlist:', error);
                });
        }

        function addToCart(productId) {
            event.preventDefault()

            const inputField = document.getElementById(`quantity-${productId}`);
            const quantity = parseInt(inputField.value);

            if (quantity < 1) {
                inputField.value = 1;

                Swal.fire({
                    toast: true,
                    timer: 1500,
                    timerProgressBar: true,
                    title: 'Invalid Quantity!',
                    text: 'Quantity cannot be less than 1.',
                    icon: 'error',
                    position: 'top-end',
                    showConfirmButton: false,
                    customClass: {
                        popup: 'custom-toast'
                    }
                });
                return;
            }
            if (quantity > 10) {
                inputField.value = 10;

                Swal.fire({
                    toast: true,
                    timer: 1500,
                    timerProgressBar: true,
                    title: 'Invalid Quantity!',
                    text: 'Quantity cannot be greater than 10.',
                    icon: 'error',
                    position: 'top-end',
                    showConfirmButton: false,
                    customClass: {
                        popup: 'custom-toast'
                    }
                });
                return;
            }
            axios.post('/addProductToCart', { productId, quantity })
                .then(response => {
                    if (response.data.success) {
                        Swal.fire({
                            toast: true,
                            timer: 800,
                            timerProgressBar: true,
                            title: 'Added!',
                            text: response.data.message,
                            icon: 'success',
                            position: 'top-end',
                            showConfirmButton: false,
                            customClass: {
                                popup: 'custom-toast'
                            }
                        })
                    } else {
                        Swal.fire({
                            toast: true,
                            timer: 800,
                            timerProgressBar: true,
                            title: 'Failed!',
                            text: 'Failed to add product to cart ',
                            icon: 'error',
                            position: 'top-end',
                            showConfirmButton: false,
                            customClass: {
                                popup: 'custom-toast'
                            }
                        })
                    }
                })
                .catch(error => {
                    console.error('There was an error adding the product to the cart:', error);
                });
        }



