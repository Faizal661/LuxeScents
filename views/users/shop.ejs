                <div class="col-lg-9">

                    <div class="shop__product__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__left">
                                    <p>Showing 1–12 of 126 results</p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__right">
                                    <p>Sort by :</p>
                                    <select>
                                        <option value="">Low To High</option>
                                        <option value="">High to Low</option>
                                        <option value="">Popularity</option>
                                        <option value="">New Arrivals</option>
                                        <option value="">A-Z</option>
                                        <option value="">Z-A</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="row">
                        <% products.forEach(product=> { %>
                            <div class="col-lg-4 col-md-6 col-sm-6  "
                                onclick="window.location.href='/singleProduct?id=<%= product._id %>';">
                                <div class="product__item border border-3 rounded rounded-3 p-2">
                                    <div class="product__item__pic set-bg"
                                        data-setbg="<%= product.productImages[0].replace(/\\/g, '/') %>">
                                        <ul class="product__hover">
                                            <li><a href="#"><img src="img/icon/heart.png" alt=""></a></li>
                                            <li><a href="#"><img src="img/icon/cart.png" alt=""></a></li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">

                                        <h5>
                                            <%= product.productName %>
                                        </h5>
                                        <div class="d-block">
                                            <p class="h6 fw-lighter"> Brand : <%= product.brand.brandName %>
                                            </p>
                                            <p class="h6 fw-lighter"> Note : <%= product.category.name %>
                                            </p>

                                        </div>
                                        <div class="d-flex ">
                                            <h5>₹<%= product.salePrice %>
                                            </h5>
                                            <h5 class="pl-4 text-muted  " style="text-decoration: line-through;">₹<%=
                                                    product.regularPrice %>
                                            </h5>
                                        </div>


                                    </div>
                                </div>

                            </div>
                            <% }) %>

                    </div>



